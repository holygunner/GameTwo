<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/start_button_corners"/>
            <stroke android:width="1dp" android:color="#53cde7" />
            <gradient android:angle="180" android:endColor="#95e7b2" android:startColor="#018cef" />
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/start_button_corners"/>
            <stroke android:width="0dp" android:color="#41a0b4" />
            <gradient android:angle="180" android:startColor="#81c99a" android:endColor="#0077cb" />
        </shape>
    </item>

</selector>