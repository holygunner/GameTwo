<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/start_button_corners"/>
            <stroke android:width="1dp" android:color="#8e179f" />
            <gradient android:angle="180" android:endColor="#004f86" android:startColor="#620b6e" />
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/start_button_corners"/>
            <gradient android:angle="180" android:endColor="#004f86" android:startColor="#620b6e" />
        </shape>
    </item>

</selector>