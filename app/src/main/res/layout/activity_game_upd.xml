<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_margin="16dp"
             android:orientation="vertical"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/recycler_grid_game_desk">

        <TextView
            android:id="@+id/turnFigureButton2"
            android:hint="10/100"
            android:textSize="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_grid_game_desk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
    </android.support.v7.widget.RecyclerView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/recycler_grid_game_desk">

        <Button
            android:id="@+id/turnFigureButton"
            android:background="@drawable/clockwise_pointer_picto"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>
    </FrameLayout>

</RelativeLayout>